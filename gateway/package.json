    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "node-config": "^0.0.2",
    "node-gyp": "^9.3.1",
    "nodemon": "^2.0.20",
