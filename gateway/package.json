{
  "name": "ms-gateway",
  "version": "2.0.0",
  "description": "Alt default gateway microservice",
  "author": "florian <florian@alt.bzh>",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node --trace-warnings dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && npx tsc-alias && npm run copy-certs",
    "copy-certs": "cp -r ./src/certs/ ./dist/",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/http-proxy": "^8.4.0",
    "@fastify/jwt": "^6.5.0",
    "@fastify/multipart": "^7.3.0",
    "@fastify/redis": "^6.1.0",
    "@nestjs/jwt": "^10.1.0",
    "@types/body-parser": "^1.19.2",
    "@types/http-errors": "^2.0.1",
    "@types/ioredis": "^4.28.10",
    "@types/negotiator": "^0.6.1",
    "abstract-cache": "^1.0.1",
    "abstract-cache-redis": "^2.0.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.8",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "docker": "^1.0.0",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "fastify": "^4.10.2",
    "fastify-healthcheck": "^4.3.0",
    "fastify-raw-body": "^4.2.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.2.4",
    "nanoid": "3.3.4",
    "nats": "^2.10.2",
    "negotiator": "^0.6.3",
    "npm-check-updates": "^16.6.2",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
